generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id            Int      @id @default(autoincrement())
  product_name  String
  product_price Int
  product_img   String
  product_desc  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

model Cart{
  Id Int @id @default(autoincrement())
  product product @relation(fields: [ProductId], references: [Id])
  product_id Int
  user_google 
  product_id Int
  product_price Int
  quantity   Int
  total      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  
}


model order {
  id         Int      @id @default(autoincrement())
  user_id    Int
  product_id Int
  price      Int
  order_date DateTime
  quantity   Int
  total      Int
  address    String?
  expedisi   String
  subtotal   Int
  shipping   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  product product @relation(fields: [ProductId], references: [Id])
  product_id Int
  user_google
  
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique(map: "User_username_key")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
