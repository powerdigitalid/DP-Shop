generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id            Int      @id @default(autoincrement())
  product_name  String
  product_price Int
  product_img   String
  product_desc  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  Item          Item[]
}

model Cart{
  Id Int @id @default(autoincrement())
  Items Item[]
  updatedAt     DateTime @default(now())
  CreatedAt DateTime @default(now())
}

model Item{
  Id  Int @id @default(autoincrement())
  product    product  @relation(fields: [product_id], references: [id], map: "Order_product_id_fkey")
  product_id Int  
  product_price Int
  Cart  Cart? @relation(fields: [CartId], references: [Id])
  CartId      Int?
  order_date   DateTime
  quantity    Int
  total      Int
  address    String?
  expedisi   String
  subtotal   Int
  shipping   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model order {
  id         Int      @id @default(autoincrement())
  user_id    Int
  product_id Int
  price      Int
  order_date DateTime
  quantity   Int
  total      Int
  address    String?
  expedisi   String
  subtotal   Int
  shipping   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  product    product  @relation(fields: [product_id], references: [id]) 
  @@index([product_id], map: "Order_product_id_fkey")
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique(map: "User_username_key")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Image{
  Id Int @id @default(autoincrement())
  path String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}